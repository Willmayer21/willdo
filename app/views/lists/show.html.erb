            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <circle cx="12" cy="12" r="9" fill="#00AA45"></circle>
            <path d="M9 12l2 2l4 -4"></path>
        </svg>
        <p class="ml-1 line-through"><%= item.name %></p>
      </div>
    </a>
  </div>
  <% end %>

</div>

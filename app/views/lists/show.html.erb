<div class="w-[90%] p-4 bg-orange-50 border rounded-lg border-red-700">
  <div class="font-normal mb-2">
    <p class="text-2xl mb-05">30%</p>
    <p class="text-xs">List Completion</p>
  </div>
  <div class="mb-4">
    <div class="h-1 bg-red-200 w-full rounded">
      <div style="width: 30%" class="h-full transition-all duration-1000 rounded bg-red-600"></div>
    </div>
  </div>
  <% @items.each do |item| %>
  <div class="mb-2">
    <a href="#">
      <div class="flex cursor-pointer text-md">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-circle-check" width="16"
                    height="16" viewBox="0 0 24 24" stroke-width="2" stroke="#fff" fill="none" stroke-linecap="round"

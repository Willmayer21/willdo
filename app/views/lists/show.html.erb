

<div class="border p-8 flex flex-col justify-center min-w-15rem">
  <div class="border p-8 text-center">
    <h1>LIST: <%= @list.name %></h1>
  </div>
  <div class="py-1rem">
    <ul>
      <% @items.each do |item| %>
        <li>
          <div class="flex justify-between">
            <div>
              <%= link_to item.name, list_item_path(item.list, item) %>
            </div>
            <div>
              <%= item.completed %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="border p-8 text-center flex flex-col ">
  <%= link_to "NEW ITEM", new_list_item_path(@list) %>
  <%= link_to "EDIT LIST NAME", edit_list_path(@list) %>
  <%= button_to "DELETE", list_path(@list), method: :delete, data: { turbo_confirm: "Are you sure?" } %>
  <%= link_to "HOME", lists_path %>
  </div>
</div>


<style>
  .justify-between {
    justify-content: space-between;
  }
</style>
